<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarResume_click"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <ImageButton
            android:id="@+id/backButton_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <ImageView
            android:id="@+id/imageViewLogo_click"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_main_logo" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvClick_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:text="|"
                        android:textColor="#35B790"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvClick_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아이디"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvResume_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 님의 이력서 작성"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvResumeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이력서 제목"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center">

                    <EditText
                        android:id="@+id/titleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:hint="제목을 입력하세요."
                        android:textSize="16sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvClick_line5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="|"
                            android:textColor="#35B790"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvClick_academic"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="학력 사항"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/education_plus"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="235dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/plus_button" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvClick_line6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="|"
                            android:textColor="#35B790"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvClick_career"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="경력 사항"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/career_plus"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="235dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/plus_button" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvClick_line7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="|"
                            android:textColor="#35B790"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvClick_introduction"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="자격증"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="235dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/plus_button" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvClick_line9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="|"
                            android:textColor="#35B790"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvClick_learning"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="어학"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="235dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/plus_button" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvClick_line10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="|"
                            android:textColor="#35B790"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvClick_desire"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="교육"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="235dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/plus_button" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvClick_line12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="|"
                            android:textColor="#35B790"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvClick_award"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="수상"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="235dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/plus_button" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvClick_line13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="|"
                            android:textColor="#35B790"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvClick_preferential"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="우대 사항"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="235dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/plus_button" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvClick_line11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="|"
                            android:textColor="#35B790"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvClick_self_introduction"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="자기소개서"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="235dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/plus_button" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
